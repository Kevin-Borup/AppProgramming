{
  "Kestrel": {
    "Endpoints": {
      "HttpsFromPem": {
        "Url": "https://localhost:32773",
        "ClientCertificateMode": "RequireCertificate",
        "Certificate": {
          "Path": "./Certificates/localhost+3.pem",
          "KeyPath": "./Certificates/localhost+3-key.pem",
          //"AllowInvalid": true
        }
      }
    }
  },
  "BulletinDB": {
    "ConnectionString": "mongodb://localhost:32768/",
    "DatabaseName": "BulletinDB",
    "ImagesCollectionName": "Images",
    "BoardCollectionName": "Board"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
